@model TelefonRehberi.Models.Entities.Kisi

@{
    ViewData["Title"] = "KayitEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f2f0f4;
        color: #333;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 40px;
        color: #a28fc9;
        display: flex;
        align-items: center;
    }

    .directory-icon {
        margin-right: 10px;
        width: 50px;
        height: 50px;
    }

    .search-icon {
        margin-right: 10px;
        width: 20px;
        height: 20px;
    }

    .input-group {
        max-width: 400px;
        margin: 0 auto;
    }

    .table {
        margin-top: 20px;
    }

    .form-container {
        text-align: center;
        margin-top: 30px;
        color: #a28fc9;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        text-align: left;
    }

    .form-control {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        padding: 8px;
    }

    .btn-primary {
        background-color: #a28fc9;
        border-color: #a28fc9;
    }

        .btn-primary:hover {
            background-color: #895fad;
            border-color: #895fad;
        }

    .btn-success {
        background-color: #34bfa3;
        border-color: #34bfa3;
    }

        .btn-success:hover {
            background-color: #2d8e7f;
            border-color: #2d8e7f;
        }
</style>

<div class="container">
    <h2 class="form-container">Kayıt Ekle</h2>

    <form method="post" enctype="multipart/form-data" class="form-container">
        <div class="form-group">
            <label class="form-label" for="Ad">Ad</label>
            <input type="text" id="Ad" name="Ad" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Soyad">Soyad</label>
            <input type="text" id="Soyad" name="Soyad" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Numara">Numara</label>
            <input type="text" id="Numara" name="Numara" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Eposta">Eposta</label>
            <input type="email" id="Eposta" name="Eposta" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Website">Website</label>
            <input type="text" id="Website" name="Website" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Adres">Adres</label>
            <input type="text" id="Adres" name="Adres" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="fotoDosyasi">Fotoğraf Seçin:</label>
            <input type="file" id="fotoDosyasi" name="FotoDosyasi" accept="image/*" class="file-input" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">KAYDET</button>
        </div>

        <div class="form-group">
            <a href="@Url.Action("Getir")" class="btn btn-success">Kartvizit Okut</a>
        </div>
    </form>
</div>
