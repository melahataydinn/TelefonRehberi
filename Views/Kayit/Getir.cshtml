@model TelefonRehberi.Models.Entities.Kisi
@{
    ViewData["Title"] = "Getir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f2f0f4;
        color: #333;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 40px;
        color: #a28fc9;
        display: flex;
        align-items: center;
    }

    .directory-icon {
        margin-right: 10px;
        width: 50px;
        height: 50px;
    }

    .search-icon {
        margin-right: 10px;
        width: 20px;
        height: 20px;
    }

    .input-group {
        max-width: 400px;
        margin: 0 auto;
    }

    .table {
        margin-top: 20px;
    }

    .form-container {
        text-align: center;
        margin-top: 30px;
        color: #a28fc9;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        text-align: left;
    }

    .form-control {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        padding: 8px;
    }

    .btn-primary {
        background-color: #a28fc9;
        border-color: #a28fc9;
    }

        .btn-primary:hover {
            background-color: #895fad;
            border-color: #895fad;
        }

    .btn-success {
        background-color: #34bfa3;
        border-color: #34bfa3;
    }

        .btn-success:hover {
            background-color: #2d8e7f;
            border-color: #2d8e7f;
        }
</style>

<h1>Kayıt Ekle</h1>

<div id="uploadForm">
    <form class="form-horizontal" id="imageForm" method="post" enctype="multipart/form-data">
        <label for="image">Fotoğraf Seçin:</label>
        <input type="file" name="image" id="image" accept="image/*" />

        <button type="submit" class="btn btn-primary">Bilgileri Getir</button>
    </form>
</div>
    <form class="form-horizontal" method="post" action="/Kayit/Getir1">
        <div class="form-group">
            <label class="form-label" for="Ad">Ad</label>
            <input type="text" id="Ad" name="Ad" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Soyad">Soyad</label>
            <input type="text" id="Soyad" name="Soyad" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Numara">Numara</label>
            <input type="text" id="Numara" name="Numara" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Eposta">Eposta</label>
            <input type="email" id="Eposta" name="Eposta" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Website">Website</label>
            <input type="text" id="Website" name="Website" class="form-control" />
        </div>

        <div class="form-group">
            <label class="form-label" for="Adres">Adres</label>
            <input type="text" id="Adres" name="Adres" class="form-control" />
        </div>

        
        <div class="form-group">
            <button type="submit" class="btn btn-primary">KAYDET</button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#imageForm").submit(function (event) {
            event.preventDefault();

            var formData = new FormData(this);

            $.ajax({
                url: "/Kayit/Getir",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (data) {
                    // Sonuçları gösterme bölümü
                    $("#results").show();

                    $("#Ad").val(data.ad);
                    $("#Soyad").val(data.soyad);
                    $("#Numara").val(data.numara);
                    $("#Eposta").val(data.eposta);
                    $("#Website").val(data.website);
                    $("#Adres").val(data.adres);
                },
                error: function () {
                    alert("Bir hata oluştu.");
                }
            });
        });
    });
</script>
